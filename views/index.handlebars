<img src="#" alt="burger">

<h1>Burger Time!</h1>

<div id="not-eaten-list">
	<ol>
		{{#each burgers}}
    		{{#unless this.devoured}}
      			<li>
        			{{this.burger_name}}
        			<form action="/{{this.id}}?_method=PUT" method="POST">
        				<input type="hidden" name="devoured" value="true">
						<button type="submit">Eat da burger!</button>
        			</form>
        		</li>
        	{{/unless}}
        {{/each}}
	</ol>
</div>

<div id="eaten-list">
	<ol>
		{{#each burgers}}
    		{{#if this.devoured}}
      			<li>
        			{{this.burger_name}}
        		</li>
        	{{/if}}
        {{/each}}
	</ol>
</div>

<form id="add-burger-form" action="/" method="POST">
	<input type="text" id="burger-name" name="name">
	<button type="submit">Submit</button>
</form>
<p>Enter a burger you would like to eat and click the "Submit" button.</p>
